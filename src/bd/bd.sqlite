CREATE TABLE Carrinho (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    livro_id INTEGER NOT NULL,
    quantidade INTEGER NOT NULL,
    FOREIGN KEY (livro_id) REFERENCES Livro(id)
);
